@model Product


<h3>Our Products</h3>

<table>
    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>StockLevel</th>
    </tr>
   
    
        <tr>
            <td>@Model.ID</td>
            <td>@Model.Name</td>
            <td>@Model.Price</td>
            <td>@Model.CategoryID</td>
            <td>@Model.OnSale</td>
            <td>@Model.StockLevel</td>

        </tr>
        
            <div style="display: block">
            <a href="/Product/UpdateProduct/@Model.ID">Update this Product</a>
            </div>
    



</table>

